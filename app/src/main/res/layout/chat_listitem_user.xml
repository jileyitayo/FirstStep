<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_list_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<!--
    card_view:cardUseCompatPadding="true" -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/CUsername"
            android:paddingStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:text="Username"
            android:textStyle="bold"
            android:textColor="#363636"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingTop="5dp"
            android:background="#fff"/>

        <TextView
            android:id="@+id/CEmail"
            android:layout_width="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="email address"
            android:textColor="#5e5e5e"
            android:gravity="center"
            android:layout_below="@+id/CUsername"
            android:paddingTop="2dp"
            android:background="#fff"/>

    </RelativeLayout>

<!--android:layout_alignEnd="@+id/contain"

            android:onClick="removeChild"
            android:layout_gravity="end" android:layout_alignStart="@+id/deleteImageButton"-->
</android.support.v7.widget.CardView>